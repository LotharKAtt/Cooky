<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.lotharkatt.cooky">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cooky_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cooky_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.StepActivity" />
        <activity android:name=".activities.RecipeOverview" />
        <activity android:name=".activities.AddRecipeActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.RecipeListActivity" />
        <activity android:name=".activities.RegistrationActivity" />
        <activity android:name=".activities.PasswordActivity" />
        <activity
            android:name=".activities.IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>